<?xml version="1.0"?>
<package>
  <metadata>
    <id>Wholething.FallbackImagePickerProperty</id>
    <!-- This version number is not in use but is up-to-date -->
    <version>0.1</version>
    <title>Wholething.FallbackImagePickerProperty</title>
    <authors>Harry Gordon and Wholething (Dean Leigh and Ault Nathanielsz)</authors>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>FallbackImagePickerProperty is an Umbraco image picker that defines a fallback/default image that users can optionally override.</description>
    <releaseNotes>
      - Moved editor to "Media" group and updated icon.
      - Added config option for specifying fallback image by node property instead of a fixed media node.
    </releaseNotes>
    <dependencies>
      <dependency id="UmbracoCms" version="[8.0,9.0)" />
    </dependencies>
    <license type="expression">MIT</license>
  </metadata>
  <files>
    <file src="Templates\ValueConverters\**" target="content\ValueConverters\" />
    <file src="Plugins\FallbackImagePicker\**" target="content\App_Plugins\FallbackImagePicker\" />
  </files>
</package>